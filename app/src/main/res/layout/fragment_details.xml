<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:layout_weight="1"
    android:background="@color/design_default_color_background"
    android:orientation="vertical"
    android:padding="10dp">
    <!-- Media -->
    <ImageView
        android:id="@+id/imageHome"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:contentDescription="@string/content_description_media"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="@id/cardLayout"
        tools:background="@color/design_default_color_on_secondary" />
    <!-- Buttons -->

    <LinearLayout
        android:id="@+id/headerComments"
        android:layout_width="81dp"
        android:layout_height="29dp"
        android:layout_marginTop="316dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="300dp">

        <ImageView
            android:id="@+id/startIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:src="@android:drawable/star_on"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/star_rating_digits_details" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/descriptionBody"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/headerComments">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Place">

        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="85dp"
            android:layout_marginStart="10dp"
            android:minWidth="100dp"
            android:text="@string/detailed_description_details">
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/descriptionBody">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Price">

        </TextView>

        <TextView
            android:id="@+id/priceItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:minWidth="100dp"
            android:text="@string/price_value_details" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/descriptionBody">
    </LinearLayout>

    <include
        layout="@layout/fragment_review_list"
        android:layout_width="366dp"
        android:layout_height="213dp"
        tools:layout_editor_absoluteX="10dp"
        tools:layout_editor_absoluteY="468dp"></include>

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="top"
        app:constraint_referenced_ids="headerComments" />

    <androidx.constraintlayout.widget.Constraints
        android:id="@+id/constraints"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></androidx.constraintlayout.widget.Constraints>

</androidx.constraintlayout.widget.ConstraintLayout>